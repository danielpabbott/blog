<h1>Add a Post</h1>
<form id="add-post" action="/posts" method="post">
  <p><input type="text" name="title" placeholder="Title"></p>
  <p><textarea form="add-post" rows=4 cols=100 name="content" placeholder="Content"></textarea></p>
  <p><select name="person_id">
    <option disabled selected>Author</option>
    {{#each author}}
    <option default="blogger" value="{{this.id}}">{{this.username}}</option>
    {{/each}}
  </select></p>
  <input type="submit" value="Submit">
</form>
