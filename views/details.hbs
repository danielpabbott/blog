<h2>{{post.title}}</h2>

<p>
  {{post.content}}
</p>

Comments:

<ul>
  {{#each comments}}
    <li>{{this.content}} by {{this.username}}</li>
  {{/each}}
</ul>

<form action="/add-comment" method="post">
  <p><select name="person_id">
    <option disabled selected>Author</option>
    {{#each users}}
      <option default="blogger" value="{{this.id}}">{{this.username}}</option>
    {{/each}}
  </select></p>
  <input type="hidden" name="post_id" value="{{post.id}}">
  <input type="text" name="content" >
  <input type="submit" value="Comment">
</form>
